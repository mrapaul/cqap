# Use an Ubuntu base image with Java 7
FROM openjdk:7u51-jdk

# Install Tomcat 7
RUN apt-get update && \
    apt-get install -y wget && \
    wget https://archive.apache.org/dist/tomcat/tomcat-7/v7.0.109/bin/apache-tomcat-7.0.109.tar.gz && \
    tar -xvzf apache-tomcat-7.0.109.tar.gz && \
    mv apache-tomcat-7.0.109 /usr/local/tomcat

# Set environment variables for Tomcat
ENV CATALINA_HOME /usr/local/tomcat
ENV PATH $CATALINA_HOME/bin:$PATH

# The application's WAR file (assuming it's generated by Maven)
ARG WAR_FILE=target/cqap-fx.war

# Copy the WAR file to the Tomcat webapps directory
COPY ${WAR_FILE} $CATALINA_HOME/webapps/cqap-fx.war

# Expose the necessary port
EXPOSE 8080

# Start Tomcat
CMD ["catalina.sh", "run"]
